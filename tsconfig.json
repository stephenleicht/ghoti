{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "declaration": true,
        "strict": true,
        "module": "ES2015",
        "moduleResolution": "node",
        "target": "ES2017",
        "jsx": "react",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strictPropertyInitialization": false,
        "pretty": true,
        "lib": [
            "dom",
            "es2017"
        ],
        "typeRoots": [
            "./typings",
            "./node_modules/@types"
        ]
    },
    "include": [
        "./src/**/*",
        "./typings/**/*.d.ts"
    ]
}